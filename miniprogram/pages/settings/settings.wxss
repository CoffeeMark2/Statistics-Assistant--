.cell-input-group {
  display: flex;
  gap: 16rpx;
}

.cell-input-item {
  flex: 1;
}

.data-management {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.data-count-title {
  font-weight: 500;
}

.data-count-value {
  font-size: 12px;
  color: #888;
}

.reset-button-container {
  margin-top: 32rpx;
  display: flex;
  justify-content: center;
}

.save-button-container {
  padding: 24rpx;
}

.cell-title-danger {
  color: #e34d59 !important; /* TDesign 红色 */
}

.subsection-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
  margin-bottom: 8rpx;
  padding-right: 16rpx; /* 给右侧图标一点空间 */
}

.subsection-title {
  font-size: 28rpx;
  color: #5e637a;
  padding-left: 16rpx;
} 