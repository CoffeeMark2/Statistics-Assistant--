/**app.wxss**/
@import './miniprogram_npm/tdesign-miniprogram/common/style/index.wxss';

page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: #333;
  font-size: 14px;
  box-sizing: border-box;
}

.container {
  padding: 16px;
}

.card {
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.05);
  padding: 16px;
  margin-bottom: 16px;
}

.dashboard {
  text-align: center;
  padding: 24px 0;
}

.dashboard-title {
  font-size: 14px;
  color: #888;
  margin-bottom: 8px;
}

.dashboard-amount {
  font-size: 36px;
  font-weight: bold;
  color: #0052d9;
}

.amount-positive {
  color: #00a870;
}

.amount-negative {
  color: #e34d59;
}

.help-text {
  font-size: 12px;
  color: #888;
  margin-top: 4px;
}

.form-item {
  margin-bottom: 20px;
}

.form-label {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  display: block;
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 16px;
}

.button-group {
  display: flex;
  gap: 16rpx;
}

.button-group .t-button {
  flex: 1;
}

.full-width {
  width: 100%;
} 
